@{
    // Esto establece el título de la pestaña en el navegador
    ViewData["Title"] = "Punto de Venta";
}

<div class="container text-center mt-5">
    <h1 class="display-4 text-primary fw-bold">¡Punto de Venta de Elotes!</h1>

    @if (ViewBag.NombreUsuario != null)
    {
        <h3 class="text-muted">Turno de: @ViewBag.NombreUsuario</h3>
    }

    <hr class="my-4">
    <p class="lead">
        Aquí es donde se registrarán las ventas.
    </p>
    <div class="alert alert-info mt-4" role="alert">
        ¡Listo para tomar la siguiente orden! 🌽
    </div>
</div>