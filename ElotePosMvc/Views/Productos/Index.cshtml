@model IEnumerable<ElotePosMvc.Models.Producto>

@{
    ViewData["Title"] = "Gestión de Productos";
}

<h1 class="display-4">🌽 Gestión de Productos</h1>
<p class="lead">Aquí puedes ver, crear y editar los productos de tu menú.</p>

<p>
    <a asp-action="Crear" class="btn btn-primary btn-lg shadow">
        + Añadir Nuevo Producto
    </a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>
                Nombre del Producto
            </th>
            <th>
                Precio de Venta
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @item.PrecioVenta.ToString("C")
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.IdProducto" class="btn btn-sm btn-warning">Editar</a> |
                    <a asp-action="Detalles" asp-route-id="@item.IdProducto" class="btn btn-sm btn-info">Detalles</a> |
                    <a asp-action="Eliminar" asp-route-id="@item.IdProducto" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>