@model ElotePosMvc.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Configuración Inicial";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">¡Configuración Inicial del Sistema!</h3>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted">Estás a punto de crear el primer usuario 'Jefe' (Administrador). Esta página solo funcionará una vez.</p>

                    <form asp-action="CrearPrimerJefe" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Username" class="form-control" placeholder="Usuario" autocomplete="off" />
                            <label asp-for="Username">Usuario para el Jefe</label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" autocomplete="new-password" />
                            <label asp-for="Password">Contraseña para el Jefe</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-danger btn-lg fw-semibold">Crear Administrador</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>